
<div class="container">

  <h1> <%= property_name %></h1>

</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      Adresse: <%= @property.address %>
    </div>
    <div class="col-12">
      Nummer: <%= @property.property_number %>
    </div>
    <div class="col-12">
      Postnummer: <%= @property.postal_code %>
    </div>
    <div class="col-12">
      By/tettsted: <%= @property.city %>
    </div>

    <%= link_to "Registrer ny enhet", new_property_property_unit_path(@property) %>

<table class="table table-striped">
  <thead>
      <tr>
        <th scope="col">Enhet</th>
        <th scope="col">Leietaker</th>
        <th scope="col">Beskrivelse</th>
        <th colspan="3">Handling</th>
      </tr>
    </thead>
    <tbody>
  <% @property.property_units.each do |unit| %>
    <tr scope="row">
          <td><%= unit.unit_number %></td>
          <td><%= Tenant.find(unit.tenant).first_name+" "+Tenant.find(unit.tenant).last_name%></td>
          <td><%= unit.description %></td>
          <td><%= link_to 'Vis', [@property, unit]%>
          <%= link_to 'Rediger', edit_property_property_unit_path(@property, unit) %>
           <%= link_to 'Slett', [@property, unit], method: :delete, data: { confirm: 'Er du sikker?' } %>
        </tr>
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "Tilbake", properties_path %>