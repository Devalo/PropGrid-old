<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-md-5">
  <h2><%= Property.find(@property_unit.property_id).address %>
    <span class="small">
      Enhet <%= @property_unit.unit_number %>
    </span>
  </h2>
  </div>
  <div class="col-md-6">
    <%= link_to "Opprett leiekontrakt", new_property_property_unit_lease_path(@property, @property_unit) %>


  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-5">
    <strong>Leietaker:</strong>
    <% if @property_unit.tenant.present? %>
    <%= Tenant.find(@property_unit.tenant).first_name+" "+Tenant.find(@property_unit.tenant).last_name%>
    <% else %>
    Ingen leietaker
    <% end %>
  </p>
  <p><strong>Husleie:</strong>
  <%= nok_currency(@property_unit.rent) %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @property_unit.description %>
  </p>
  <p><strong>Type enhet:</strong>
  <%= @property_unit.property_type %>

  <p><strong>Antall rom:</strong/>
  <%= @property_unit.number_of_rooms %></p>

  <p><strong>Antall boder:</strong>
    <%= @property_unit.storage_spaces %></p>
  <p><strong>Parkeringsplasser:</strong>
  <%= @property_unit.parking_lots %></p>
  <p><strong>Kjøkken:</strong>
  <%= human_boolean(@property_unit.kitchen) %></p>
  <p><strong>Toalett:</strong>
  <%= human_boolean(@property_unit.bathroom) %></p>

  </div>
  <div class="col-md-6">
    <h3>Mine gjøremål</h3>
    <hr>
    <div id="todo-app"></div>

  </div>
</div>
<p>


<%= link_to 'Rediger', edit_property_property_unit_path(@property, @property_unit), class: "btn btn-primary-c" %>
<%= link_to 'Tilbake', property_path(@property), class: "btn btn-outline-secondary btn-sm" %>
