<div class="row">
  <div class="col-md-5">
  <h2><%= Property.find(@property_unit.property_id).address %>
    <span class="small">
      Enhet <%= @property_unit.unit_number %>
    </span>
  </h2>
  </div>

  <div class="col-md-6">



  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-5">
    <strong>Leietaker:</strong>
    <% if @property_unit.tenant.present? %>
    <%= Tenant.find(@property_unit.tenant).first_name+" "+Tenant.find(@property_unit.tenant).last_name%>
    <% else %>
    Ingen leietaker
    <% end %>
  </p>
  <p><strong>Husleie:</strong>
  <%= nok_currency(@property_unit.rent) %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @property_unit.description %>
  </p>
  <p><strong>Type enhet:</strong>
  <%= @property_unit.property_type %>

