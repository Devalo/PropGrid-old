<div class="container">
  <div class="breadcrumbs">
    <%= render_breadcrumbs %>
  </div>
<div class="main-background main-container">

<div class="row">
  <div class="col-md-5">
  <h4><%= Property.find(@property_unit.property_id).address %>
    <span class="small">
      Enhet <%= @property_unit.unit_number %>
    </span>
  </h4>
  </div>

  <div class="col-md-6">



  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-5">
    <strong>Leietaker:</strong>
    <% if @property_unit.tenant.present? %>
    <%= Tenant.find(@property_unit.tenant).first_name+" "+Tenant.find(@property_unit.tenant).last_name%>
    <% else %>
    Ingen leietaker
    <% end %>
  </p>
  <p><strong>Husleie:</strong>
  <%= nok_currency(@property_unit.rent) %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @property_unit.description %>
  </p>
  <p><strong>Type enhet:</strong>
  <%= @property_unit.property_type %>

  <p><strong>Antall rom:</strong/>
  <%= @property_unit.number_of_rooms %></p>

  <p><strong>Antall boder:</strong>
    <%= @property_unit.storage_spaces %></p>
  <p><strong>Parkeringsplasser:</strong>
  <%= @property_unit.parking_lots %></p>
  <p><strong>Kj√∏kken:</strong>
  <%= human_boolean(@property_unit.kitchen) %></p>
  <p><strong>Toalett:</strong>
  <%= human_boolean(@property_unit.bathroom) %></p>

  </div>
  <div class="col-md-6 text-center">
    <div class="row">
      <div class="col-md-2 text-center">
        <%= link_to property_property_unit_show_documents_path(@property, @property_unit) do %>
        <div class="document-item ">
          <i class="far fa-folder text-center" id="document-folder"></i>Dokumenter
        </div>
        <% end %>
      </div>

      <div class="col-md-8">
        <h5><%= show_proper_links_if_or_not_lease_exist %>
            <% if @lease %>|
              <%= link_to "Last ned kontrakt", property_property_unit_lease_path(@property, @property_unit, "#{@lease.id}.pdf") %>
            <% end %>
        </h5>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h5></h5>
      </div>

    </div>


    <hr>
    <div d="todo-app"></div>

  </div>
</div>
<p>


<%= link_to 'Rediger', edit_property_property_unit_path(@property, @property_unit), class: "btn btn-primary-c" %>
