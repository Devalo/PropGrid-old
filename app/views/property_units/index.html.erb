<p id="notice"><%= notice %></p>

<h1>Property Units</h1>

<table>
  <thead>
    <tr>
      <th>Unit number</th>
      <th>Tenant</th>
      <th>Description</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @property_units.each do |property_unit| %>
      <tr>
        <td><%= property_unit.unit_number %></td>
        <td><%= property_unit.tenant %></td>
        <td><%= property_unit.description %></td>
        <td><%= property_unit.property_id %></td>
        <td><%= link_to 'Show', property_unit %></td>
        <td><%= link_to 'Edit', edit_property_unit_path(property_unit) %></td>
        <td><%= link_to 'Destroy', property_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

