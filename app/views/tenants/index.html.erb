<h1>Leietakere</h1>

<%= link_to "Registrer ny leietaker", new_tenant_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Fornavn</th>
      <th scope="col">Etternavn</th>
      <th scope="col">Telefon</th>
      <th scope="col">Epost</th>
      <th scope="col">Personnummer</th>
      <th scope="col">Handling</th>

    </tr>
  </thead>

  <tbody>
    <% @tenants.each_with_index do |tenant, num| %>
    <% num += 1 %> 
      <tr>
      <td scope="row"><%= num %></td>
        <td><%= tenant.first_name %></td>
        <td><%= tenant.last_name %></td>
        <td><%= tenant.email %></td>
        <td><%= tenant.phone_number %></td>
        <td><%= tenant.social_sec_number %></td>
        <td><%= link_to 'Vis', tenant %>
        <%= link_to 'Rediger', edit_tenant_path(tenant) %>
        <%= link_to 'Slett', tenant, method: :delete, data: { confirm: 'Er du sikker på at du ønsker å slette denne leietakeren?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





