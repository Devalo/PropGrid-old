<%= form_with(model: bug_report, local: true) do |form| %>
  <% if bug_report.errors.any? %>
    <div id="error_explanation">
      <h4><%= bug_report.errors.count %> feil gjorde at skjemaet ikke kunne sendes:</h4>

      <ul>
        <% bug_report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-6">
    <div class="form-group">
      <%= form.label :ticket_name, "Hva gjelder henvendelsen?" %>
      <%= form.text_field :ticket_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :ticket_urgency, "Hvor mye haster det?" %>
      <%= form.select :ticket_urgency, BugReport.ticket_urgencies.keys, {prompt: "Velg nivÃ¥"},
                                                                        {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= form.label :ticket_body, "Beskrivelse av feilen" %>
      <%= form.text_area :ticket_body, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Send inn", class: "btn btn-primary-c" %>
    </div>
  <% end %>

  </div>
