<div class="container auth-forms">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-4 offset-md-4 text-center">
        <div class="auth-text">
          <h4>Innlogging Huseier</h4>
          <p>Logg inn p√• din konto</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-field", placeholder: "Epost" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: "auth-field", placeholder: "Passord" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group text-left">
              <%= f.check_box :remember_me, class: "auth-checkbox" %>
              <%= f.label :remember_me, "Husk meg", class: "auth-checkbox-label" %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Logg inn", class: "btn btn-primary-c auth-button" %>
          </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
